#!/bin/bash
# An apt wrapper for Linux

if [ "$1" == "install" ]; then
    shift
    sudo apt-get install "$@"
elif [ "$1" == "remove" ]; then
    shift
    sudo apt-get remove "$@" && sudo apt-get purge "$@"
elif [ "$1" == "search" ]; then
    shift
    apt-cache search "$@"
elif [ "$1" == "show"   ]; then
    shift
    dpkg -s $@
    apt-cache show $@
elif [ "$1" == "update" ]; then
    sudo apt-get update && sudo apt-get upgrade && sudo apt-get dist-upgrade && sudo apt-get autoremove && sudo apt-get autoclean
else
    echo "usage: brew <command> [<arg>]"
    echo
    echo "commands:"
    echo "   install    Installs package(s)"
    echo "   remove     Removes package(s)"
    echo "   show       Shows information on a package"
    echo "   search     Searches for package names"
    echo "   update     Updates the system pacakges"
fi  

